<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="@dimen/small_margin"
    android:layout_marginEnd="16dp">

    <TextView
        android:id="@+id/tvCityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:textSize="24sp"
        tools:text="Thessaloniki" />

    <TextView
        android:id="@+id/tvDegrees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/tvCityName"
        android:textSize="24sp"
        tools:text="20" />

    <ImageView
        android:id="@+id/ivWeather"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/tvDegrees"
        app:layout_constraintLeft_toRightOf="@+id/tvDegrees"
        app:layout_constraintTop_toTopOf="@+id/tvCityName"
        tools:src="@drawable/art_clear" />

</RelativeLayout>